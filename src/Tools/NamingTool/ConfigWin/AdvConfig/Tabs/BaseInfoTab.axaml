<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:Naming.AdvConfig.ViewModels"
             xmlns:res="clr-namespace:NamingTool.Properties"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Naming.AdvConfig.Tabs.BaseInfoTab"
             x:DataType="vm:BaseInfoTabViewModel">

    <UserControl.Styles>
        <Style Selector="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
        <Style Selector="TextBox.error">
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
        <Style Selector="NumericUpDown">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
        <Style Selector="TextBlock.Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="12" Margin="24">
            
            <!-- Function Configuration -->
            <Grid ColumnDefinitions="*,2*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
                  ColumnSpacing="16" RowSpacing="12">
                
                <!-- Display Name -->
                <TextBlock Grid.Row="0" Grid.Column="0" Classes="Label" Text="{x:Static res:Resources.Field_DisplayName}"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding DisplayName}"
                         Watermark="Enter a display name for this tool instance..."/>
                
                <!-- Function Name -->
                <TextBlock Grid.Row="1" Grid.Column="0" Classes="Label" Text="{x:Static res:Resources.Field_SubtaskName}"/>
                <StackPanel Grid.Row="1" Grid.Column="1">
                    <TextBox Name="FunctionNameTextBox"
                             Text="{Binding FunctionName}"
                             Watermark="Only lowercase letters and underscores (e.g., create_subtask)"/>
                    <TextBlock IsVisible="{Binding !IsFunctionNameValid}"
                               Text="{x:Static res:Resources.Field_SubtaskName_Validation}"
                               FontSize="11"
                               Foreground="Red"
                               Margin="0,2,0,0"/>
                </StackPanel>
                
                <!-- Max Recursion Level -->
                <TextBlock Grid.Row="2" Grid.Column="0" Classes="Label" Text="{x:Static res:Resources.Field_MaxRecursionLevel}"/>
                <NumericUpDown Grid.Row="2" Grid.Column="1"
                               Value="{Binding MaxRecursionLevel}"
                               Minimum="1" Maximum="20"
                               Increment="1"/>
                
                <!-- Executive Person -->
                <TextBlock Grid.Row="3" Grid.Column="0" Classes="Label" Text="{x:Static res:Resources.Field_ExecutivePerson}"/>
                <ComboBox Grid.Row="3" Grid.Column="1"
                          ItemsSource="{Binding AvailablePersons}"
                          SelectedItem="{Binding SelectedExecutivePerson}"
                          PlaceholderText="{x:Static res:Resources.Field_ExecutivePerson_Placeholder}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="-" FontSize="11" 
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{Binding Description}" FontSize="11" 
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                
                <!-- Function Description -->
                <TextBlock Grid.Row="4" Grid.Column="0" Classes="Label" Text="{x:Static res:Resources.Field_SubtaskDescription}"/>
                <TextBox Grid.Row="4" Grid.Column="1"
                         Text="{Binding FunctionDescription}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         MinHeight="60"
                         Watermark="Describe what this function does..."/>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</UserControl>