{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=:memory:"
  },
  "DatabaseSettings": {
    "DatabasePath": ":memory:",
    "EnableLogging": true,
    "MigrationsEnabled": true
  },
  "PluginSettings": {
    "PluginPath": "TestPlugins",
    "EnablePluginLogging": true,
    "LoadTimeoutMs": 5000
  },
  "TestSettings": {
    "UseInMemoryDatabase": true,
    "EnableTestLogging": true,
    "TestDataSeed": true,
    "CleanupAfterTests": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Warning",
      "DaoStudio": "Debug"
    },
    "Console": {
      "IncludeScopes": true
    }
  },
  "ApiSettings": {
    "TimeoutMs": 30000,
    "RetryAttempts": 3,
    "RetryDelayMs": 1000
  }
}
